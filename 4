public class LaboratoryActivity3 {
    public static void main(String[] args) {
        System.out.println(noX("xxxxxxxxxdasxasdaxsdxadxaxdaxasdxaxasxasxdwawdxqeqhrtxhrtxhrt"));
    }
    public static String noX(String s){
        if(s.equals("")){
            return "";
        }
        if(s.charAt(0)=='x'){
            return "y" + noX(s.substring(1));
        }
        return s.charAt(0) + noX(s.substring(1));
    }
}
